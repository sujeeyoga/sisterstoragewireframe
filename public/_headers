# Static assets - cache for 1 year with immutable flag
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Images in lovable-uploads - cache for 1 year
/lovable-uploads/*
  Cache-Control: public, max-age=31536000, immutable

# Image assets - cache for 1 year with performance headers
*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg
  Accept-Ranges: bytes
*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg
  Accept-Ranges: bytes
*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png
  Accept-Ranges: bytes
*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp
  Accept-Ranges: bytes
*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml
*.gif
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/gif
  Accept-Ranges: bytes

# Fonts - cache for 1 year
*.woff
  Cache-Control: public, max-age=31536000, immutable
*.woff2
  Cache-Control: public, max-age=31536000, immutable
*.ttf
  Cache-Control: public, max-age=31536000, immutable
*.eot
  Cache-Control: public, max-age=31536000, immutable

# Videos - cache for 1 year
*.mp4
  Cache-Control: public, max-age=31536000, immutable
*.webm
  Cache-Control: public, max-age=31536000, immutable

# HTML - no cache, always get fresh content
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Service worker - always fresh
/sw.js
  Cache-Control: public, max-age=0, must-revalidate

# Sitemap and robots - cache for 1 day
/sitemap.xml
  Cache-Control: public, max-age=86400
/robots.txt
  Cache-Control: public, max-age=86400

# API routes - no cache
/api/*
  Cache-Control: no-cache, no-store, must-revalidate
